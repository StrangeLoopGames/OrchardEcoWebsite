@model PlayEco.OrchardCore.Cloud.Models.LoginViewModel;
@{
    Layout = "../_Layout";
}

<div class="login-wrap d-flex flex-column align-items-center">
  <h1>User Login Page</h1>
    @using (Html.BeginForm("SubmitLoginSlg", "Account", FormMethod.Post, new { @class = "row login-wrap col-4 g-3" }))
    {
        <div class="form-group row g-1">
            <label for="Username">Username</label>
            @Html.TextBoxFor(m => m.Username)
        </div>
        <div class="form-group row g-1">
            <label for="Password">Password</label>
            @Html.PasswordFor(m => m.Password)
        </div>
        <div class="form-group row g-1">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="login-actions d-flex justify-content-between">
            <a href="/Account/Forgot">Forgot your password?</a>
            <a href="/Register">Create an account</a>
        </div>
    }
</div>
